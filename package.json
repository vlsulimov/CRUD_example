{
  "name": "str_serv",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "rm -rf ./build && env NODE_ENV=test jest --runInBand --coverage",
    "build": "tsc",
    "lint": "eslint --ext .js,.ts .",
    "start": "npm run build && nodemon build/app.js",
    "dev": "nodemon --watch \"src/**\" --ext \"ts,json\" --ignore \"src/**/*.spec.ts\" --exec \"ts-node src/app.ts\"",
    "db:create": "npx sequelize-cli db:create",
    "db:drop": "npx sequelize-cli db:drop",
    "db:migrate:up": "npx sequelize-cli db:migrate"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.8",
    "@types/supertest": "^2.0.11",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-winston": "^4.0.5",
    "fastest-validator": "^1.11.0",
    "fastest-validator-decorators": "^1.2.1",
    "helmet": "^4.2.0",
    "kafkajs": "^1.15.0",
    "nodemon": "^2.0.4",
    "reflect-metadata": "^0.1.13",
    "typescript": "^4.0.3",
    "winston": "^3.3.3",
    "pg": "^8.5.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.22.3"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/node": "^16.0.1",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "sequelize-cli": "^6.2.0",
    "sequelize-typescript-migration": "0.0.1-beta.3",
    "eslint": "^7.4.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prefer-arrow": "^1.2.1",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-cli": "^26.0.1",
    "lint-staged": "^10.2.11",
    "prettier": "2.3.2",
    "supertest": "^6.1.4",
    "ts-jest": "^26.1.1"
  },
  "jest": {
    "testTimeout": 15000,
    "coverageDirectory": "<rootDir>/coverage",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.(ts|js)"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "globalSetup": "<rootDir>/src/test/helpers/setupEnv.ts",
    "clearMocks": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache"
  }
}
